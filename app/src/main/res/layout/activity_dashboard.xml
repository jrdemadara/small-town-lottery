<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.dashboard.DashboardActivity">

    <TextView
        android:id="@+id/textViewDashPNL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:fontFamily="@font/nexa_xbold"
        android:text="0.0"
        android:textColor="#41B134"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textViewDashTotalBet" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbarDash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/logo_sm_svg"
        app:logoAdjustViewBounds="false"
        app:logoScaleType="matrix"
        app:menu="@menu/toolbar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbarDash">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/nexa_bold"
            android:text="Todays Total Bet" />

        <TextView
            android:id="@+id/textViewDashDate"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nexa_bold"
            android:text="NOV 13 2022"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewDashTotalBet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:fontFamily="@font/nexa_heavy"
        android:text="0.0"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="39dp"
        android:layout_height="21dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="5dp"
        android:layout_marginTop="26dp"
        android:layout_weight="1"
        android:scaleType="fitStart"
        app:layout_constraintStart_toEndOf="@+id/textViewDashTotalBet"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/php" />

    <TextView
        android:id="@+id/textViewDashTotalHits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/nexa_xbold"
        android:text="0.0"
        android:textColor="#F1AB55"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDashTotalBet" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:fontFamily="@font/nexa_heavy"
        android:text="Total Hits"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textViewDashTotalHits"
        app:layout_constraintTop_toBottomOf="@+id/textViewDashTotalBet" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:layout_weight="1"
        android:fontFamily="@font/nexa_heavy"
        android:text="PNL"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDashTotalBet" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15">

        <TextView
            android:id="@+id/textViewDashMenuBet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:fontFamily="@font/nexa_regular"
            android:rotationX="1"
            android:text="Bet"
            android:textAlignment="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:drawableTopCompat="@drawable/menu_bet" />

        <TextView
            android:id="@+id/textViewDashMenuHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:fontFamily="@font/nexa_regular"
            android:rotationX="1"
            android:text="History"
            android:textAlignment="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:drawableTopCompat="@drawable/menu_history" />

        <TextView
            android:id="@+id/textViewDashMenuResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:fontFamily="@font/nexa_regular"
            android:rotationX="1"
            android:text="Result"
            android:textAlignment="center"
            app:drawableTopCompat="@drawable/menu_result" />

        <TextView
            android:id="@+id/textViewDashTransmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:fontFamily="@font/nexa_regular"
            android:rotationX="1"
            android:text="Transmit"
            android:textAlignment="center"
            app:drawableTopCompat="@drawable/menu_upload" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/nexa_xbold"
        android:text="RESULT"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2pm"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:clickable="true"
        app:cardBackgroundColor="#FEF7EE"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nexa_xbold"
            android:text="2PM"
            android:textColor="#F1AB55"
            android:textSize="16sp" />

        <TextView

            android:id="@+id/textViewDash2pmResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexa_xbold"
            android:text="0"
            android:textColor="#F1AB55"
            android:textSize="24sp" />

        <TextView

            android:id="@+id/textViewDash2pmWinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/nexa_regular"
            android:text="0 winners"
            android:textColor="#848484"
            android:textSize="14sp" />

        <ImageView

            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:srcCompat="@drawable/cardview_1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="45dp">

            <TextView
                android:id="@+id/textViewDash2pmTotalWin"
                android:layout_width="122dp"
                android:layout_height="18dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nexa_xbold"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="#848484"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.486" />

            <TextView

                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/nexa_xbold"
                android:text="PHP"
                android:textColor="#848484"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewDash2pmTotalWin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.488" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5pm"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:clickable="true"
        app:cardBackgroundColor="#F9FAFE"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2pm">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="45dp">

            <TextView
                android:id="@+id/textViewDash5pmTotalWin"
                android:layout_width="122dp"
                android:layout_height="18dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nexa_xbold"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="#848484"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.486" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/nexa_xbold"
                android:text="PHP"
                android:textColor="#848484"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewDash5pmTotalWin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.488" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nexa_xbold"
            android:text="5PM"
            android:textColor="#3D4045"
            android:textSize="16sp" />

        <TextView

            android:id="@+id/textViewDash5pmResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexa_xbold"
            android:text="0"
            android:textColor="#3D4045"
            android:textSize="24sp" />

        <TextView

            android:id="@+id/textViewDash5pmWinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/nexa_regular"
            android:text="0 winner"
            android:textColor="#848484"
            android:textSize="14sp" />

        <ImageView

            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:srcCompat="@drawable/cardview_2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9pm"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:clickable="true"
        app:cardBackgroundColor="#F1F7FC"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5pm">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="45dp">

            <TextView

                android:id="@+id/textViewDash9pmTotalWin"
                android:layout_width="122dp"
                android:layout_height="18dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nexa_xbold"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="#848484"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.486" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/nexa_xbold"
                android:text="PHP"
                android:textColor="#848484"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewDash9pmTotalWin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.488" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nexa_xbold"
            android:text="9PM"
            android:textColor="#348AB1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewDash9pmResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexa_xbold"
            android:text="0"
            android:textColor="#348AB1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewDash9pmWinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/nexa_regular"
            android:text="0 winners"
            android:textColor="#848484"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:srcCompat="@drawable/cardview_3" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="411dp"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageViewDashBet"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:srcCompat="@drawable/big_bet"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationDash"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="bottom"
            android:background="@drawable/nav"
            app:elevation="5dp"
            app:itemBackground="@android:color/transparent"
            app:itemHorizontalTranslationEnabled="false"
            app:itemPaddingTop="30dp"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </FrameLayout>

    <ImageView
        android:id="@+id/imageViewDashStatus"
        android:layout_width="77dp"
        android:layout_height="19dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:scaleType="fitEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>